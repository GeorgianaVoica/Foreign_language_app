<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lessons.L1BeginnerAcivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:context=".lessons.L1BeginnerAcivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarShowLesson"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/lavender"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Los"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/tvQ1L1B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:fontFamily="sans-serif-medium"
            android:text="TextView"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/rgQ1L1B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:orientation="vertical"
           android:layout_marginStart="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvQ1L1B">

            <RadioButton
                android:id="@+id/rb1Q1L1B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unde mergi?" />

            <RadioButton
                android:id="@+id/rb2Q1L1B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unde locuiești?" />

            <RadioButton
                android:id="@+id/rb3Q1L1B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ce locuință ai?" />
        </RadioGroup>

        <TextView
            android:id="@+id/tvQ2L1B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:fontFamily="sans-serif-medium"
            android:text="TextView"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rgQ1L1B" />

        <EditText
            android:id="@+id/raspunsQ2L1B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:hint="Introduceti textul"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvQ2L1B"></EditText>

        <!--    <TextView
        android:id="@+id/tvAnswer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestion2" /> !-->

        <Button
            android:id="@+id/bword1L1B"
            android:layout_width="80dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Hund"
            android:textSize="9dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.147"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/raspunsQ2L1B"></Button>

        <Button
            android:id="@+id/bword2L1B"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:text="mein"
            android:textSize="9dp"
            app:layout_constraintBottom_toBottomOf="@+id/bword1L1B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.424"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bword1L1B"
            app:layout_constraintVertical_bias="1.0"></Button>

        <Button
            android:id="@+id/bword3L1B"
            android:layout_width="76dp"
            android:layout_height="48dp"
            android:text="Das"
            android:textSize="9dp"
            app:layout_constraintBottom_toBottomOf="@+id/bword2L1B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.157"
            app:layout_constraintStart_toEndOf="@id/bword2L1B"
            app:layout_constraintTop_toTopOf="@+id/bword2L1B"
            app:layout_constraintVertical_bias="1.0"></Button>

        <Button
            android:id="@+id/bword4L1B"
            android:layout_width="76dp"
            android:layout_height="48dp"
            android:text="ist"
            android:textSize="9dp"
            app:layout_constraintBottom_toBottomOf="@+id/bword3L1B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.709"
            app:layout_constraintStart_toEndOf="@id/bword3L1B"
            app:layout_constraintTop_toTopOf="@+id/bword3L1B"
            app:layout_constraintVertical_bias="0.0"></Button>

        <TextView
            android:id="@+id/tvQ3L1B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginStart="35dp"
            android:fontFamily="sans-serif-medium"
            android:text="TextView"
            android:textSize="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bword3L1B" />

        <RadioGroup
            android:id="@+id/rgChkL1B"
            android:layout_width="398dp"
            android:layout_height="160dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvQ3L1B">

            <CheckBox
                android:id="@+id/checkBox1L1B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Land" />

            <CheckBox
                android:id="@+id/checkBox2L1B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="Kontinent" />

            <CheckBox
                android:id="@+id/checkBox3L1B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:text="Wasser" />
        </RadioGroup>

        <ImageButton
            android:id="@+id/imageButtonReplayL1B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:backgroundTint="@color/lavender"
            android:minHeight="48dp"
            android:src="@drawable/ic_replay"
            app:layout_constraintBottom_toTopOf="@+id/bword3L1B"
            app:layout_constraintStart_toEndOf="@+id/raspunsQ2L1B"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageView
            android:id="@+id/imageView2L1B"
            android:layout_width="68dp"
            android:layout_height="63dp"
            android:layout_marginStart="140dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/house2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvQ1L1B" />

        <TextView
            android:id="@+id/textView4L1B"
            android:layout_width="75dp"
            android:layout_height="39dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="124dp"
            android:fontFamily="@font/amatic_sc_bold"
            android:text="Wohnung"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvQ1L1B" />

        <TextView
            android:id="@+id/textView5L1B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:textAlignment="textStart"
            android:text="3. Cum traduceți: "
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/tvQ2L1B"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rgQ1L1B" />

        <TextView
            android:id="@+id/textViewQ4L1B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="36dp"
            android:fontFamily="sans-serif-medium"
            android:text="TextView"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/rg4L1B"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rgChkL1B" />

        <RadioGroup
            android:id="@+id/rg4L1B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewQ4L1B"
            app:layout_constraintBottom_toTopOf="@+id/textViewQ5L1B"
            android:layout_marginStart="30dp">

            <RadioButton
                android:id="@+id/rb1Q4L1B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deutsch" />

            <RadioButton
                android:id="@+id/rb2Q4L1B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mutter" />

            <RadioButton
                android:id="@+id/rb3Q4L1B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hallo" />
        </RadioGroup>

        <TextView
            android:id="@+id/textViewQ5L1B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:text="Textview"
            android:textSize="20dp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintBottom_toTopOf="@+id/rg5L1B"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rg4L1B" />

        <RadioGroup
            android:id="@+id/rg5L1B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewQ5L1B"
            app:layout_constraintBottom_toTopOf="@+id/bFinnishL1B"
            android:layout_marginStart="35dp">

            <RadioButton
                android:id="@+id/rb1Q5L1B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Am Montag" />

            <RadioButton
                android:id="@+id/rb2Q5L1B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tut mir leid" />

            <RadioButton
                android:id="@+id/rb3Q5L1B"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Die Wochenende" />
        </RadioGroup>

        <Button
            android:id="@+id/bFinnishL1B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/lightPinkpurple"
            android:text="Finalizează"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rg5L1B" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>