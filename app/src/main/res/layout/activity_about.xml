<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activities.AboutActivity">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="154dp"
        android:layout_height="105dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.105"
        app:srcCompat="@drawable/ab2" />

    <TextView
        android:id="@+id/tvLos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="@color/grey"
        android:text="Ce este Los?"
        android:textSize="20dp"
        android:outlineSpotShadowColor="@color/lavender"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="373dp"
        android:layout_height="121dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine|text"
        android:outlineAmbientShadowColor="@color/lavender"
        android:text="      Los este o aplicație de învățare a limbii germane, care oferă lecții pentru mai multe niveluri de limbă. Astfel,
cei interesați pot să descopere lumea germană într-un mod interactiv și distractiv."
        android:textColor="@color/grey"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tvLos"
        tools:ignore="UnknownId"
        tools:layout_editor_absoluteX="19dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
